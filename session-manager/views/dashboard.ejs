<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - X11 Session Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1>X11 Session Manager</h1>
            <div class="nav-links">
                <span>Welcome, <%= user.name %></span>
                <% if (user.email && process.env.ADMIN_USERS && process.env.ADMIN_USERS.split(',').includes(user.email)) { %>
                    <a href="/admin" class="btn btn-secondary">Admin</a>
                <% } %>
                <a href="/auth/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>
    
    <main class="container">
        <div class="dashboard">
            <h2>Your X11 Sessions</h2>
            
            <div class="session-controls">
                <button id="create-session-btn" class="btn btn-primary btn-large">Create New Session</button>
                <button id="refresh-btn" class="btn btn-secondary">Refresh</button>
            </div>
            
            <div id="sessions-list" class="sessions-list">
                <div class="loading">Loading sessions...</div>
            </div>
        </div>
    </main>

    <!-- Progress Modal -->
    <div id="progress-overlay" class="progress-overlay">
        <div class="progress-modal">
            <h3>Creating Session</h3>
            <div class="spinner"></div>
            <div id="progress-text" class="progress-text">Initializing...</div>
            <div class="progress-steps">
                <div class="progress-step" data-step="init">Initializing session</div>
                <div class="progress-step" data-step="container">Creating Docker container</div>
                <div class="progress-step" data-step="starting">Starting container</div>
                <div class="progress-step" data-step="vnc">Waiting for VNC server</div>
                <div class="progress-step" data-step="xterm">Starting xterm process</div>
                <div class="progress-step" data-step="complete">Session ready</div>
            </div>
        </div>
    </div>
    
    <script>
        let sessions = [];
        
        async function loadSessions() {
            try {
                const response = await fetch('/sessions');
                const data = await response.json();
                sessions = data.sessions || [];
                displaySessions();
            } catch (error) {
                console.error('Error loading sessions:', error);
                document.getElementById('sessions-list').innerHTML = 
                    '<div class="error">Error loading sessions</div>';
            }
        }
        
        function displaySessions() {
            const sessionsList = document.getElementById('sessions-list');
            
            if (sessions.length === 0) {
                sessionsList.innerHTML = '<p class="no-data">No active sessions. Click "Create New Session" to get started.</p>';
                return;
            }
            
            const html = sessions.map(session => `
                <div class="session-card">
                    <h3>Session ${session.sessionId.split('-').pop()}</h3>
                    <div class="session-details">
                        <p><strong>Status:</strong> <span class="status-active">Active</span></p>
                        <p><strong>Port:</strong> ${session.port}</p>
                        <p><strong>Created:</strong> ${new Date(session.createdAt).toLocaleString()}</p>
                    </div>
                    <div class="session-actions">
                        <button class="btn btn-success" onclick="openSession('${session.url}')">Open</button>
                        <button class="btn btn-danger" onclick="deleteSession('${session.sessionId}')">Delete</button>
                    </div>
                    <div class="session-tech-info">
                        <details>
                            <summary>Technical Details</summary>
                            <div class="tech-details">
                                <p><strong>Session ID:</strong> ${session.sessionId}</p>
                                <p><strong>Container ID:</strong> ${session.containerId.substring(0, 12)}</p>
                                <p><strong>Container Name:</strong> ${session.containerName}</p>
                                <p><strong>xterm PID:</strong> ${session.xtermPid || 'N/A'}</p>
                                <p><strong>Display Number:</strong> :${session.displayNum}</p>
                                <p><strong>Web Port:</strong> ${session.port}</p>
                                <p><strong>X11 Port:</strong> ${session.x11Port || 'N/A'}</p>
                            </div>
                        </details>
                    </div>
                </div>
            `).join('');
            
            sessionsList.innerHTML = html;
        }
        
        async function createSession() {
            const btn = document.getElementById('create-session-btn');
            const overlay = document.getElementById('progress-overlay');
            const progressText = document.getElementById('progress-text');
            
            btn.disabled = true;
            overlay.classList.add('active');
            
            // Reset progress steps
            document.querySelectorAll('.progress-step').forEach(step => {
                step.classList.remove('active', 'completed');
            });
            
            try {
                // Use EventSource for real-time progress updates
                const eventSource = new EventSource('/sessions/create');
                let sessionData = null;
                
                eventSource.onmessage = (event) => {
                    const data = JSON.parse(event.data);
                    
                    if (data.step) {
                        // Update progress text
                        progressText.textContent = data.message;
                        
                        // Update step indicators
                        const currentStep = document.querySelector(`[data-step="${data.step}"]`);
                        if (currentStep) {
                            // Mark previous steps as completed
                            let prevStep = currentStep.previousElementSibling;
                            while (prevStep) {
                                prevStep.classList.remove('active');
                                prevStep.classList.add('completed');
                                prevStep = prevStep.previousElementSibling;
                            }
                            // Mark current step as active
                            currentStep.classList.add('active');
                            currentStep.classList.remove('completed');
                        }
                    }
                    
                    if (data.complete) {
                        sessionData = data.session;
                        // Mark all steps as completed
                        document.querySelectorAll('.progress-step').forEach(step => {
                            step.classList.remove('active');
                            step.classList.add('completed');
                        });
                        eventSource.close();
                        
                        // Wait a moment to show completion
                        setTimeout(() => {
                            overlay.classList.remove('active');
                            loadSessions();
                            // Auto-open the new session
                            if (sessionData && sessionData.url) {
                                window.open(sessionData.url, '_blank');
                            }
                            btn.disabled = false;
                        }, 1000);
                    }
                    
                    if (data.error) {
                        eventSource.close();
                        overlay.classList.remove('active');
                        alert('Error creating session: ' + data.error);
                        btn.disabled = false;
                    }
                };
                
                eventSource.onerror = (error) => {
                    console.error('EventSource error:', error);
                    eventSource.close();
                    overlay.classList.remove('active');
                    alert('Error creating session. Please try again.');
                    btn.disabled = false;
                };
                
            } catch (error) {
                console.error('Error creating session:', error);
                overlay.classList.remove('active');
                alert('Error creating session');
                btn.disabled = false;
            }
        }
        
        async function deleteSession(sessionId) {
            if (!confirm('Are you sure you want to delete this session?')) {
                return;
            }
            
            try {
                const response = await fetch(`/sessions/${sessionId}`, { method: 'DELETE' });
                const data = await response.json();
                
                if (data.success) {
                    await loadSessions();
                } else {
                    alert('Error deleting session');
                }
            } catch (error) {
                console.error('Error deleting session:', error);
                alert('Error deleting session');
            }
        }
        
        function openSession(url) {
            window.open(url, '_blank');
        }
        
        // Event listeners
        document.getElementById('create-session-btn').addEventListener('click', createSession);
        document.getElementById('refresh-btn').addEventListener('click', loadSessions);
        
        // Initial load
        loadSessions();
        
        // Auto-refresh every 30 seconds
        setInterval(loadSessions, 30000);
    </script>
</body>
</html>
