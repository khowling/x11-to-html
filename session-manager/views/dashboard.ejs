<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - X11 Session Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1>X11 Session Manager</h1>
            <div class="nav-links">
                <span>Welcome, <%= user.name %></span>
                <% if (user.email && process.env.ADMIN_USERS && process.env.ADMIN_USERS.split(',').includes(user.email)) { %>
                    <a href="/admin" class="btn btn-secondary">Admin</a>
                <% } %>
                <a href="/auth/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>
    
    <main class="container">
        <div class="dashboard">
            <h2>Your X11 Sessions</h2>
            
            <div class="session-controls">
                <button id="create-session-btn" class="btn btn-primary btn-large">Create New Session</button>
                <button id="refresh-btn" class="btn btn-secondary">Refresh</button>
            </div>
            
            <div id="sessions-list" class="sessions-list">
                <div class="loading">Loading sessions...</div>
            </div>
        </div>
    </main>
    
    <script>
        let sessions = [];
        
        async function loadSessions() {
            try {
                const response = await fetch('/sessions');
                const data = await response.json();
                sessions = data.sessions || [];
                displaySessions();
            } catch (error) {
                console.error('Error loading sessions:', error);
                document.getElementById('sessions-list').innerHTML = 
                    '<div class="error">Error loading sessions</div>';
            }
        }
        
        function displaySessions() {
            const sessionsList = document.getElementById('sessions-list');
            
            if (sessions.length === 0) {
                sessionsList.innerHTML = '<p class="no-data">No active sessions. Click "Create New Session" to get started.</p>';
                return;
            }
            
            const html = sessions.map(session => `
                <div class="session-card">
                    <h3>Session ${session.sessionId.split('-').pop()}</h3>
                    <div class="session-details">
                        <p><strong>Status:</strong> <span class="status-active">Active</span></p>
                        <p><strong>Port:</strong> ${session.port}</p>
                        <p><strong>Created:</strong> ${new Date(session.createdAt).toLocaleString()}</p>
                    </div>
                    <div class="session-actions">
                        <button class="btn btn-success" onclick="openSession('${session.url}')">Open</button>
                        <button class="btn btn-danger" onclick="deleteSession('${session.sessionId}')">Delete</button>
                    </div>
                    <div class="session-tech-info">
                        <details>
                            <summary>Technical Details</summary>
                            <div class="tech-details">
                                <p><strong>Session ID:</strong> ${session.sessionId}</p>
                                <p><strong>Container ID:</strong> ${session.containerId.substring(0, 12)}</p>
                                <p><strong>Container Name:</strong> ${session.containerName}</p>
                                <p><strong>xterm PID:</strong> ${session.xtermPid || 'N/A'}</p>
                                <p><strong>Display Number:</strong> :${session.displayNum}</p>
                                <p><strong>Web Port:</strong> ${session.port}</p>
                                <p><strong>X11 Port:</strong> ${session.x11Port || 'N/A'}</p>
                            </div>
                        </details>
                    </div>
                </div>
            `).join('');
            
            sessionsList.innerHTML = html;
        }
        
        async function createSession() {
            const btn = document.getElementById('create-session-btn');
            btn.disabled = true;
            btn.textContent = 'Creating session...';
            
            try {
                const response = await fetch('/sessions/create', { method: 'POST' });
                const data = await response.json();
                
                if (data.success) {
                    await loadSessions();
                    // Auto-open the new session
                    window.open(data.session.url, '_blank');
                } else {
                    alert('Error creating session');
                }
            } catch (error) {
                console.error('Error creating session:', error);
                alert('Error creating session');
            } finally {
                btn.disabled = false;
                btn.textContent = 'Create New Session';
            }
        }
        
        async function deleteSession(sessionId) {
            if (!confirm('Are you sure you want to delete this session?')) {
                return;
            }
            
            try {
                const response = await fetch(`/sessions/${sessionId}`, { method: 'DELETE' });
                const data = await response.json();
                
                if (data.success) {
                    await loadSessions();
                } else {
                    alert('Error deleting session');
                }
            } catch (error) {
                console.error('Error deleting session:', error);
                alert('Error deleting session');
            }
        }
        
        function openSession(url) {
            window.open(url, '_blank');
        }
        
        // Event listeners
        document.getElementById('create-session-btn').addEventListener('click', createSession);
        document.getElementById('refresh-btn').addEventListener('click', loadSessions);
        
        // Initial load
        loadSessions();
        
        // Auto-refresh every 30 seconds
        setInterval(loadSessions, 30000);
    </script>
</body>
</html>
